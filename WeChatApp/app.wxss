/**app.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  vertical-align: top;
}

.userinfo-nickname {
  color: #aaa;
}

.container {
  /* height: 100%; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0 0; 
  box-sizing: border-box; 
} 

.activity_abstract{
  margin-top: 32rpx;
  height: 400rpx;
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0.25em;
  /* border-top: thin silver solid; */
  border-bottom: thin silver solid;
  /* background: grey; */
}

.activity_abstract_page_title{
  text-align: center;
  font-size: 1.4em;
  font-weight: bold;
  margin: 0.5em;
  padding: 0.1em 0 0.1em 0;
  border-top: thick silver solid;
  border-bottom: thick silver solid;
}

.activity_abstract_activity_title{
  font-size: 1.2em;
  font-weight: bold;
}

.activity_abstract_activity_operator{
  font-size: 1em;
  font-weight: normal;
}

.activity_page_title{
  width: 100%;
  text-align: center;
  position: fixed; 
  top: 0;
  font-size: 1.6em;
  font-weight: bold;
  background: white;
}

.activity_page_subtitle{
  font-size: 1.2em;
  font-weight: normal;
  padding: 50px 0 0 0;
}

.activity_page_metadata{
  font-size: 1em;
  line-height: 0.7em;
  width: 75%;
  padding: 0 0 0 0;
  margin: 0 0 0 0;
}

.activity_page_header_end_border{
  width: 90%;
  border-bottom: thin silver solid;
  padding: 0.5em 0 0 0;
  margin: 0 0 0.5em 0;
}

.activity_page_donate{
  font-size: 1.5em;
  width: 6em;
  /* height: 2em; */
  /* background: lightblue; */
  color: white;
  background: tomato;
  text-align: center;
  vertical-align: middle;
  /* line-height: 1.8em; */
  margin: 0.5em 0 0.25em 0;  
}

.activity_page_image{
  width: 80%;
  margin: 0.5em 0 0.5em 0;
  line-height: 0;
  background: black
}

.activity_page_story_p{
  font-size: 1em;
  text-indent: 2em;
  line-height:1.3em;
  width: 90%;
  flex-wrap:warp;
  margin: 0 0 0.4em 0;
}

.activity_page_story_h1{
  font-size: 1.3em;
  font-weight: bold;
  text-indent: 0;
  line-height:1.3em; 
  width: 90%;
  flex-wrap:warp;
  margin: 0.5 0 0.25em 0;
}

.widget-goTop { 
  position: fixed; 
  bottom: 25px; 
  left: 50%;
  background: rgba(0,0,0,0.48); 
  border-radius: 50%; 
  overflow: hidden; 
  z-index: 500; 
  margin: 0 0 0 -32px;
  /* align-content: center; */
  /* align-items:center; */
  /* justify-content:center; */
} 
.widget-goTop .gotop-wrap { 
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:center;
  width: 64px; 
  height: 64px; 
  font-size: 12px; 
  color: #fff; 
  border-radius: 50%; 
  background-color: rgba(0,0,0,0.4); 
  background-size: 50px;
  -webkit-background-size: 50px auto; 
}